---
import Badge from "./Badge.astro";
import Button from "./Button.astro";
import Github from "./icons/Github.astro";
import Web from "./icons/Web.astro";
import { type Project } from "../types/project";

const { project } = Astro.props;

interface Props {
    project: Project;
}
---

<article class="relative group rounded-lg shadow-lg hover:scale-105 hover:shadow-xl transition">
    <a href="/">
        <img 
            class="rounded-lg" 
            src={project.links.cover}
            alt="Project 01 cover image"
        >
    </a>
    <div class="p-4">
        <h3 class="text-3xl font-bold">
            <a href="/" class="hover:text-blue-500">{project.title}</a>
        </h3>
        <p class="text-zinc-600 mt-2 font-light">
            {project.description}
        </p>
        <ul class="flex flex-wrap gap-x-2 gap-y-1 mt-2">
            {
                project.learnings.map((learning) => (
                    <li>
                        <Badge>
                            {learning}
                        </Badge>
                    </li>
                ))
            }
        </ul>
        <ul class="flex gap-x-4 mt-4">
            <li>
                <Button color="black" link={project.links.github}>
                    <Github slot="icon" class="w-6 h-6"/>
                    Code
                </Button>
            </li>
            <li>
                <Button color="blue" link={project.links.demo}>
                    <Web slot="icon" class="w-6 h-6"/>
                    Demo
                </Button>
            </li>
        </ul>
    </div>
    <div class="absolute text-3xl font-bold -rotate-12 top-2 left-2 opacity-70 group-hover:text-5xl group-hover:opacity-100 transition-all">
        #{project.id.toString().padStart(2, "0")}
    </div>
</article>